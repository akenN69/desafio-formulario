<h3>Sales</h3>
<table class="table">
  <thead class="thead-dark">
    <tr>
        <th scope="col">Code</th>
        <th scope="col">Detail</th>
        <th scope="col">Category</th>
        <th scope="col">Value</th>
        <th scope="col">Discount</th>
        <th scope="col">Tax</th>
        <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
  <%@sales.each do  |sale| %>
    <tr>
      <th><%= sale.cod %></th>
      <td><%= sale.detail %></td>
      <td><%= sale.category %></td>
      <td><%= sale.value %></td>
      <td><%= sale.discount %></td>
      <td><%= sale.tax %></td>
      <td><%= sale.total %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= link_to "Volver", sales_new_path %> 